{
  "scripts": {
    "i": "npm i && npm i --prefix=apps/css",
    "dev:format": "onchange \"**/*\" -- prettier --write --ignore-unknown {{changed}}",
    "dev:css": "npm run dev --prefix=apps/css",
    "production": "npm run production --prefix=apps/css",
    "dev": "npm-run-all --parallel dev:*",
    "format": "prettier --write .",
    "clean": "rimraf apps/blog-css/node_modules apps/blog-css/package-lock.json apps/css/node_modules apps/css/package-lock.json node_modules package-lock.json"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "flowbite-typography": "^1.0.3",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.4",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@tailwindcss/typography": "^0.5.8",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.14",
    "less": "^4.1.3",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.8.1",
    "prettier-plugin-astro": "^0.7.0",
    "renamer": "^0.7.0",
    "rimraf": "^3.0.2",
    "sass": "^1.56.1"
  }
}
